<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - W9_MvcProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/W9_MvcProject.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="container-fluid border-bottom">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white ms-auto me-auto" style="max-width: 1320px;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">W9_MvcProject</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex align-items-center justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container pt-3">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<hr style="position: absolute; bottom: 40px; width: 100%; border: 1px solid #333;" />
<footer class="footer mt-auto py-3">
    <div class="container d-flex justify-content-start align-items-center" 
         style="max-width: 1320px; height: 50px; position: absolute; bottom: 0; left: 0; right: 0;">
        @DateTime.Now.Year - <strong>&nbsp;<a href="https://github.com/AenuHub" target="_blank">Mehmet Özsığırtmaç</a>&nbsp;</strong> 
        - All Rights Reserved &copy;
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>