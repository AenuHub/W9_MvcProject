@model Book

@{
    ViewData["Title"] = "Add Book";
}

<h2 class="display-5 text-center">Add Book</h2>

<form class="mt-3 m-4">
    <div class="form-group">
        <label class="form-label fw-bold">Book Title</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label class="form-label fw-bold">Author</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label class="form-label fw-bold">Genre</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label class="form-label fw-bold">Publish Date</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label class="form-label fw-bold">ISBN</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label class="form-label fw-bold">Copies Available</label>
        <input type="text" class="form-control">
    </div>
    
    <button class="btn btn-primary mt-3">Add new book</button>
</form>