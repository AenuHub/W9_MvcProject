@model BookDetailsViewModel

@{
    ViewBag.Title = "Edit Book";
}

<h2 class="display-6 fw-medium text-center">Edit Book</h2>

<div class="d-flex justify-content-center">
    <form method="post" class="mt-3 m-4 w-75">
        <div class="form-group">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="AuthorId" class="form-label fw-bold"></label>
            <select asp-for="AuthorId" asp-items="@Data.GetAuthors()" class="form-select">
                <option value="">Choose author</option>
            </select>
            <span asp-validation-for="AuthorId" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Genre" class="form-label fw-bold"></label>
            <input asp-for="Genre" class="form-control">
            <span asp-validation-for="Genre" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="PublishDate" class="form-label fw-bold"></label>
            <input asp-for="PublishDate" class="form-control">
            <span asp-validation-for="PublishDate" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Isbn" class="form-label fw-bold"></label>
            <input asp-for="Isbn" class="form-control">
            <span asp-validation-for="Isbn" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="CopiesAvailable" class="form-label fw-bold"></label>
            <input asp-for="CopiesAvailable" class="form-control">
            <span asp-validation-for="CopiesAvailable" class="form-text text-danger"></span>
        </div>
        
        <div class="mt-3" style="display: flex; align-items: center; gap: 10px;">
            <button type="submit" class="btn btn-primary btn-edit">Edit book</button>
            <a asp-controller="Book" asp-action="List" class="btn btn-secondary btn-cancel">Cancel</a>
        </div>
    </form>
</div>

<style>
    .btn-edit {
        background-color: #60b6ff;
        border-color: #60b6ff;
    }

    .btn-cancel {
        background-color: #ff5e5e;
        border-color: #ff5e5e;
    }
</style>
