@model AuthorDetailsViewModel

@{
    ViewBag.Title = "Edit Author";
}

<h2 class="display-6 fw-medium text-center">Edit Book</h2>

<div class="d-flex justify-content-center">
    <form method="post" class="mt-3 m-4 w-75">
        <div class="form-group">
            <label asp-for="FirstName" class="form-label fw-bold"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LastName" class="form-label fw-bold"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
            <input asp-for="DateOfBirth" class="form-control">
            <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Edit author</button>
    </form>
</div>
