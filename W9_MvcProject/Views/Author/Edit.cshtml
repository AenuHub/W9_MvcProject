@model AuthorDetailsViewModel

@{
    ViewBag.Title = "Edit Author";
}

<h2 class="display-6 fw-medium text-center">Edit Author</h2>

<div class="d-flex justify-content-center">
    <form method="post" class="mt-3 m-4 w-75">
        <div class="form-group">
            <label asp-for="FirstName" class="form-label fw-bold"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="LastName" class="form-label fw-bold"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
            <input asp-for="DateOfBirth" class="form-control">
            <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
        </div>

        <div class="mt-3" style="display: flex; align-items: center; gap: 10px;">
            <button type="submit" class="btn btn-primary btn-edit">Edit author</button>
            <a asp-controller="Author" asp-action="List" class="btn btn-secondary btn-cancel">Cancel</a>
        </div>
    </form>
</div>

<style>
    .btn-edit {
        background-color: #60b6ff;
        border-color: #60b6ff;
    }

    .btn-cancel {
        background-color: #ff5e5e;
        border-color: #ff5e5e;
    }
</style>
