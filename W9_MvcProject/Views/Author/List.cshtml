@model AuthorDetailsViewModel

@{
    ViewBag.Title = "Author List";
}

<h2 class="display-6 fw-medium text-center mb-4">Author List</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success w-75 align-middle mx-auto" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-danger w-75 align-middle mx-auto" role="alert">
        @TempData["DeleteMessage"]
    </div>
}

<div style="display: flex; justify-content: center; align-items: center;">
    <a class="btn btn-primary mb-3" asp-controller="Author" asp-action="Add">Add new author</a>
</div>

<table class="table table-striped table-bordered table-hover text-center align-middle w-75 mx-auto">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Data.Authors)
    {
        <tr>
            <th scope="row">@author.Id</th>
            <td>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="display: flex; align-items: center; justify-content: center; flex: 1;">
                        @author.FirstName
                    </span>
                </div>
            </td>
            <td>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="display: flex; align-items: center; justify-content: center; flex: 1;">
                        @author.LastName
                    </span>
                </div>
            </td>
            <td style="text-align: center;">
                <div style="display: flex; gap: 0.5rem; justify-content: center; margin-right: 1rem;">
                    <a class="btn btn-sm btn-primary btn-edit" asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a>
                    <a class="btn btn-sm btn-secondary btn-details" asp-controller="Author" asp-action="Details" asp-route-id="@author.Id">Details</a>
                    <a class="btn btn-sm btn-danger btn-delete" asp-controller="Author" asp-action="DeleteConfirm" asp-route-id="@author.Id">Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<style>
    .btn-edit {
        background-color: #60b6ff;
        border-color: #60b6ff;
    }

    .btn-details {
        background-color: #bdb76b;
        border-color: #bdb76b;
    }

    .btn-delete {
        background-color: #ff5e5e;
        border-color: #ff5e5e;
    }
</style>
