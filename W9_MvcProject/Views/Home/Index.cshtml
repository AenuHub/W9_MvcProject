@{
    ViewData["Title"] = "Book Repository";
}

<div class="text-center">
    <h2 class="display-5">Welcome to Book Repository</h2>
    <p>Below is a list of books.</p>
    
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Publish Date</th>
            <th scope="col">ISBN</th>
            <th scope="col">Copies Available</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var book in Data.Books)
            {
                <tr>
                    <th scope="row">@book.Id</th>
                    <td>@book.Title</td>
                    <td>@Data.Authors.Where(a => a.Id == book.AuthorId).First().GetFullName()</td>
                    <td>@book.PublishDate.ToShortDateString()</td>
                    <td>@book.ISBN</td>
                    <td>@book.CopiesAvailable</td>
                </tr>
            }
        </tbody>
    </table>
</div>
